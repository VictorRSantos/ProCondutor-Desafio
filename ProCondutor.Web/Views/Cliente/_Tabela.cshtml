@model ProCondutor.Web.Models.ClienteViewModel
<section class="mt-5">
    <table id="table" class="table table-striped table-responsive-md table-bordered" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Observação</th>
                <th>Ativo</th>
                <th>Editar</th>
                <th>Deletar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.Clientes)
            {
                <tr class="text-center">
                    <th>@cliente.Nome</th>
                    <th>@cliente.DataNascimento.ToShortDateString()</th>
                    <th>@cliente.Observacao</th>
                    <td><i class="@(cliente.Ativo == true ? "bx bxs-user-check text-success" : "bx bxs-user-x text-danger")"></i></td>
                    <th><a asp-action="Editar" asp-controller="Cliente" asp-route-id="@cliente.Id"><i class='bx bxs-edit-alt texttext-secondary'></i></a></th>
                    <th><a asp-action="Excluir" asp-controller="Cliente" asp-route-id="@cliente.Id"><i class='bx bx-trash text-danger'></i></a></th>
                                   
                </tr>
            }
        </tbody>
    </table>
</section>


